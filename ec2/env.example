# Global Configuration
TAG=0.1.0
ECR_REGISTRY=example.dkr.ecr.region.amazonaws.com
AWS_REGION=us-east-1

# Database Configuration
DB_HOST=
DB_USER=postgres
DB_PASSWORD=
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/postgres

# Redis Configuration
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
API_URL=http://api:3002
AUTH_URL=http://auth:3001
WEB_URL=http://web:3000

# Authentication
JWT_SECRET=
TOKEN_ENCRYPTION_KEY=
AUTH_SECRET=${JWT_SECRET}

# BoxyHQ/SAML Configuration
SAML_ID=
SAML_SECRET=
BOXYHQ_API_KEY=
AUTH_BOXYHQ_URL=http://jackson:5225
AUTH_BOXYHQ_SAML_ISSUER=http://jackson:5225

# GitHub Configuration
GITHUB_ENABLED=true
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_APP_URL=https://github.example.com/github-apps/greptile-example
GITHUB_ENTERPRISE_URL=https://github.example.com
GITHUB_OAUTH_ENABLED=false
GITHUB_APP_ID=

# Model Configurations
AGENT_MODEL=us.anthropic.claude-3-5-haiku-20241022-v1:0
CHAT_MODEL=us.anthropic.claude-3-5-sonnet-20241022-v2:0
EMBEDDING_MODEL=amazon.titan-embed-text-v1
AGENT_MODEL_PROVIDER=bedrock
CHAT_MODEL_PROVIDER=bedrock
EMBEDDING_MODEL_PROVIDER=bedrock
SUMMARIZER_MODEL=us.anthropic.claude-3-5-haiku-20241022-v1:0
SUMMARIZER_MODEL_PROVIDER=bedrock
EMBEDDINGS_MODEL=amazon.titan-embed-text-v1
EMBEDDINGS_MODEL_PROVIDER=bedrock

# Vector Database Configuration
VECTOR_DB_PROVIDER=pgvector
BATCH_SIZE=100
LLM_TIMEOUT=300

# Feature Flags
NOTIFICATIONS_ENABLED=false
ANALYTICS_ENABLED=false

# Hatchet Configuration
HATCHET_CLIENT_TOKEN=
HATCHET_CLIENT_TLS_STRATEGY=none
HATCHET_DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/hatchet