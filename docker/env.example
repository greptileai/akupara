# Redis Configuration
REDIS_HOST=""
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Service URLs
API_URL="http://greptile_api_service:3002"
AUTH_URL="http://greptile_auth_service:3001"
WEB_URL="http://localhost:3000"

# Authentication
JWT_SECRET=""
TOKEN_ENCRYPTION_KEY=""
