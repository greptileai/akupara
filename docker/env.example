HATCHET_RABBITMQ_URL="amqp://${HATCHET_RABBITMQ_USER}:${HATCHET_RABBITMQ_PASSWORD}@rabbitmq:5672/"

EMAIL_PROVIDER="SES"
AUTH_SAML_ONLY="false"
